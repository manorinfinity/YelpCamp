
<%include ./partials/header%>
<div class="container-fluid text-center">
<h1>Create A New Comment</h1>
<h6>Let People know about your favorite Campground</h1>
</div>

<form style="width:40rem;" id="form" action="/campgrounds/<%=Id%>/comment/<%=comment._id%>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Author</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="comment[author]" placeholder="author name" value="<%=comment.author%>">
  </div>
   <div class="form-group">
    <label for="exampleFormControlTextarea1">Comment</label>
    <textarea class="form-control" name="comment[body]" id="exampleFormControlTextarea1" rows="3"><%=comment.body%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>

</form>

<%include ./partials/footer%>