
<%include ./partials/header%>
<div class="container-fluid text-center">
<h1>Login to YelpCamp</h1>
<h6>and Explore the world of Campgrounds</h6>
</div>
<br>
<% if(message && message.length>0){ %>
<div class="container alert alert-danger" role="alert">
			<h5><%=message%> </h5>

	</div>

	<%}%>

<br>
<form style="width:40rem;" id="form" action="/campgrounds/login" method="POST">
	  <div class="form-group">
	    <label for="formGroupExampleInput">Username</label>
	    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="username" name="username">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputPassword1">Password</label>
	    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" >
	  </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

<%include ./partials/footer%>
